                  "figures": [
                    {
                      "type": "figure",
                      "mediaType": "image",
                      "src": "media/publish/material_v_4/material_ext_publish/0Bx4BSt6jniD7eW41S2JtRm9CSmc/layout_structure_toolbars1.png",
                      "caption": "<p>Full-width, default height app bar</p>"
                    }
                  ]
